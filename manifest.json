{
  "manifest_version": 3,
  "name": "Twitter Profile Search",
  "version": "1.0",
  "description": "Bringing profile search button to Twitter web!",
  "icons": {
    "48": "gosearch.png"
  },
  "permissions": [
    "scripting",
    "tabs"
  ],
  "content_scripts": [
    {
      "js": [
        "script.js"
      ],
      "matches": [
        "https://twitter.com/*"
      ]
    }
  ],
  "host_permissions": [
    "https://twitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}